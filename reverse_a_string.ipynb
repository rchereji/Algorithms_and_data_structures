   "source": [
    "### Reverse a string\n",
    "Reverse a string using recursion."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {},
   "outputs": [],
   "source": [
    "def reverse(string):\n",
    "    if len(string) == 1:\n",
    "        return string\n",
    "    else:\n",
    "        return string[-1] + reverse(string[:-1])"
   ]
  },
